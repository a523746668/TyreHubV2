<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tyrehubv2">

    <permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activiry.DataOverActivity"></activity>
        <activity android:name=".activiry.SettingActivity" />
        <activity
            android:name=".activiry.ChanceActivity"
            android:windowSoftInputMode="stateUnspecified|adjustPan" />
        <activity android:name=".activiry.BaseActivity" />
        <activity android:name=".activiry.HomePageActivity" />
        <activity android:name=".activiry.LoginActivity" />
        <activity
            android:name=".activiry.MainActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>